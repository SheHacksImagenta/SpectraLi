<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.shalini.spectra"   >

    <uses-feature
        android:name="android.hardware.camera"
        android:required="false" />
    //camera not required to function
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ShowHappyActivity" />
        <activity android:name=".RecognizeActivity" />
        <activity android:name=".SelectImageActivity" />
        <activity android:name=".ShowSadActivity" />
        <activity android:name=".ShowAngryActivity" />
        <activity android:name=".ShowStressedActivity" />
        <activity android:name=".ShowScaredActivity" />
        <activity android:name=".HomeActivity"></activity>
    </application>

</manifest>